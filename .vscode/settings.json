{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.rulers": [
            {
                "column": 120,
                "color": "#ffffff10"
            }
        ]
    },
    "isort.args": ["--profile", "black"],
    "ruff.organizeImports": false,
    "cSpell.words": []
}
